{
  "name": "Lojban-1Chat-Bridge",
  "description": "Telegram <-> Slack <-> IRC <-> Mattermost gateway",
  "version": "0.0.1",
  "preferGlobal": true,
  "bin": {
    "Lojban-1Chat-Bridge": "bridge.js"
  },
  "scripts": {
    "tsc": "tsc",
    "webpack-build": "node_modules/.bin/webpack --config webpack.config.js",
    "build": "npm install ; npm run start",
    "start": "npm run tsc -w && node node_modules/.bin/supervisor -i . -- --expose-gc ./dist/bridge.js",
    "push": "git add . ; git commit -m 'fixes' ; git push ; npm run start",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "repository": [
    {
      "type": "git",
      "url": "https://github.com/lagleki/Lojban-1Chat-Bridge.git"
    }
  ],
  "bugs": "https://github.com/lagleki/Lojban-1Chat-Bridge/issues",
  "homepage": "https://github.com/lagleki/Lojban-1Chat-Bridge",
  "dependencies": {
    "@slack/client": "^4.6.0",
    "await-to-js": "^2.0.1",
    "discord.js": "^11.4.2",
    "facebook-chat-api": "github:Schmavery/facebook-chat-api",
    "fs-extra": "^7.0.0",
    "html-entities": "^1.1.3",
    "htmlparser": "^1.7.7",
    "irc-upd": "^0.10.0",
    "marked": "^0.5.0",
    "mkdirp": "^0.5.1",
    "node-emoji": "^1.8.1",
    "node-telegram-bot-api": "^0.30.0",
    "node-vk-bot-api": "^2.1.1",
    "ramda": "^0.25.0",
    "randexp": "^0.5.3",
    "reconnecting-websocket": "^4.0.0-rc5",
    "request": "^2.88.0",
    "sanitize-html": "^1.18.5",
    "serve-static": "^1.13.2",
    "sharp": "^0.21.0",
    "simple-markdown": "^0.4.2",
    "strip-json-comments": "^2.0.1",
    "supervisor": "^0.12.0",
    "vk-io": "^4.0.0-rc.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@types/node-telegram-bot-api": "^0.30.3",
    "@types/node": "^10.9.4",
    "@types/ramda": "^0.25.37",
    "@types/slack-node": "^0.1.2",
    "@types/ws": "^6.0.1",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "jscs": "^3.0.7",
    "json-loader": "^0.5.7",
    "mocha": "^5.2.0",
    "mocha-jscs": "^5.0.1",
    "mocha-jshint": "^2.2.3",
    "prettier": "1.14.2",
    "ts-loader": "^4.5.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.0-dev.20180907",
    "webpack": "^4.18.0"
  }
}
