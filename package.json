{
  "name": "Lojban-1Chat-Bridge",
  "description": "Telegram <-> Slack <-> IRC <-> Mattermost gateway",
  "version": "0.0.1",
  "preferGlobal": true,
  "bin": {
    "Lojban-1Chat-Bridge": "bridge.js"
  },
  "scripts": {
    "tsc": "tsc",
    "genconfig": "node ./dist/bridge.js --genconfig",
    "webpack-build": "node_modules/.bin/webpack --config webpack.config.js",
    "build": "npm install ; npm run start",
    "start": "nodemon --watch dist --exec \"node ./dist/bridge.js\"",
    "push": "git add . ; git commit -m 'fixes' ; git push",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lagleki/Lojban-1Chat-Bridge.git"
  },
  "bugs": "https://github.com/lagleki/Lojban-1Chat-Bridge/issues",
  "homepage": "https://github.com/lagleki/Lojban-1Chat-Bridge",
  "dependencies": {
    "@slack/client": "^5.0.2",
    "await-to-js": "^2.1.1",
    "bootbot": "^1.0.16",
    "debug": "^4.1.1",
    "discord.js": "^11.5.1",
    "fs-extra": "^8.1.0",
    "html-entities": "^1.2.1",
    "htmlparser": "^1.7.7",
    "irc-upd": "^0.10.0",
    "libfb": "^2.3.5",
    "lojban": "^1.1.0",
    "marked": "^0.7.0",
    "mkdirp-sync": "0.0.3",
    "node-emoji": "^1.10.0",
    "node-gitter": "^2.1.0",
    "node-telegram-bot-api": "^0.40.0",
    "node-vk-bot-api": "^3.1.1",
    "p-queue": "^6.2.1",
    "ramda": "^0.26.1",
    "randexp": "^0.5.3",
    "reconnecting-websocket": "^4.2.0",
    "request": "^2.88.0",
    "sanitize-html": "^1.20.1",
    "serve-static": "^1.14.1",
    "sharp": "^0.23.3",
    "socket.io": "^2.3.0",
    "vk-io": "4.0.0-rc.7",
    "winston": "^3.2.1",
    "ws": "^7.2.0"
