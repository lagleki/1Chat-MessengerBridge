    "@types/ws": "^6.0.2",
    "eslint": "^6.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jscs": "^3.0.7",
    "json-loader": "^0.5.7",
    "mocha": "^6.2.0",
    "mocha-jscs": "^5.0.1",
    "mocha-jshint": "^2.3.1",
    "prettier": "1.18.2",
    "ts-loader": "^6.0.4",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  }
